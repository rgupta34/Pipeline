pipeline {
    agent any
    tools {
        maven 'localMaven'
    }
 
	stages{
        stage('Build'){
            steps {
                sh 'mvn clean package'
            }
            post {
                success {
                    echo 'Now Archiving...'
                    archiveArtifacts artifacts: '**/target/*.war'
                }
            }
        }
		stage('Deploy to staging'){
			steps{
				build job: 'deploy-to-staging'
			}
			post {
                success {
                    echo 'code deploying to staging server'
                }
            }
		}
		stage('Deploy to Production'){
			steps{
				timout(time:5, unit:'DAYS'){
					input message:'Approve Production Deployment'
				}
				build job: 'deploy-to-prod'
			}
			post {
                success {
                    echo 'code deployed to production is success'
                }
				failure {
                    echo 'code deployed to production is failed'
                }
            }
		}
    }
}
